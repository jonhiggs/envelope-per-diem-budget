calendar = Budget::Calendar.new
per_diem = Budget::PerDiem.new(calendar)

per_diem.bank_balance = ARGV[0].to_f.round(2) || 0
per_diem.cash_balance = ARGV[1].to_f.round(2) || 0

unless per_diem.balance == 0
  puts "Bank Balance:       $ #{per_diem.bank_balance}"
  puts "Cash Balance:       $ #{per_diem.cash_balance}"
  puts "Net Balance:        $ #{per_diem.balance}"
  puts "Cash Runway:        #{per_diem.runway} days"
  #puts "Maximum Spend:      $ #{maximum_spend balance}"
  #puts "Buffer:             $ #{buffer_balance balance}"
  puts
end
